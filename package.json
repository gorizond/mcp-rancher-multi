{
  "name": "@gorizond/mcp-rancher-multi",
  "version": "0.0.2",
  "description": "MCP Server for Rancher with multi-server support and Fleet GitOps management",
  "main": "dist/index.js",

  "bin": {
    "mcp-rancher-multi": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node build.js",
    "build:tsc": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mcp": "echo 'MCP server is ready'",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t mcp-rancher-multi .",
    "docker:run": "docker run --rm -it --env-file .env mcp-rancher-multi",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "mcp",
    "rancher",
    "kubernetes",
    "multi-server",
    "fleet",
    "gitops"
  ],
  "author": "Gorizond",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gorizond/mcp-rancher-multi.git"
  },
  "bugs": {
    "url": "https://github.com/gorizond/mcp-rancher-multi/issues"
  },
  "homepage": "https://github.com/gorizond/mcp-rancher-multi#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.0",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "ws": "^8.14.0",
    "yaml": "^2.3.0"
  },

  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.2.0"
  },
  "bundleDependencies": [
    "@modelcontextprotocol/sdk",
    "axios",
    "commander",
    "dotenv",
    "lodash",
    "node-cron",
    "winston",
    "ws",
    "yaml"
  ]
}
